---
import BaseLayout from '@layouts/BaseLayout.astro';
import AnimateOnLoad from '@components/AnimateOnLoad.astro';
import AnimateOnScroll from '@components/AnimateOnScroll.astro';

const substackUrl =
  import.meta.env.PUBLIC_SUBSTACK_URL?.trim() ||
  'https://substack.com/@jakubbarak';
---

<BaseLayout 
  title="Jakub Barák | The Bio-Codebase" 
  description="Systems architecture for high-ambition developers. Deploying Pythonic logic to brain optimization, meta-learning, and wealth-building."
  showNewsletter={true}
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-emerald-900 via-emerald-800 to-teal-900">
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
    <div class="relative mx-auto max-w-6xl px-4 py-20 sm:py-28 lg:py-32 before:content-[''] before:absolute before:inset-0 before:bg-gradient-to-r before:from-emerald-500/20 before:to-teal-500/20 before:blur-3xl before:animate-pulse before:pointer-events-none">
      <div class="flex flex-col items-center text-center">
        <!-- Badge -->
        <AnimateOnLoad delay={0} type="slide-up">
          <div class="font-builder mb-6 inline-flex items-center rounded-full border border-emerald-700 bg-emerald-950/50 backdrop-blur px-4 py-1.5 text-emerald-300 shadow-md">
            <span class="mr-2 h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
            Building in public
          </div>
        </AnimateOnLoad>
        
        <!-- Main Headline (immediate visibility) -->
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl text-balance leading-normal py-1 bg-gradient-to-r from-emerald-300 via-emerald-100 to-teal-400 bg-clip-text text-transparent">
          The Bio-Codebase: Architecture for the Polymath.
        </h1>
        
        <!-- Subheadline -->
        <AnimateOnLoad delay={400} type="slide-up">
          <p class="mt-6 max-w-2xl text-lg text-emerald-100/90 sm:text-xl leading-relaxed">
            Deploying Pythonic logic to brain optimization, meta-learning, and wealth-building. Stop consuming content; start refactoring your mind.
          </p>
        </AnimateOnLoad>
        
        <!-- CTA Buttons -->
        <AnimateOnLoad delay={500} type="slide-up">
          <div class="mt-10 flex flex-col sm:flex-row items-center gap-4">
            <a
              href={substackUrl}
              class="btn-read-substack group rounded-xl bg-emerald-600 dark:bg-emerald-500 px-8 py-4 text-base font-semibold text-white shadow-lg hover:bg-emerald-700 dark:hover:bg-emerald-400 transition-all duration-200 hover:shadow-2xl hover:-translate-y-0.5 hover:scale-[1.02] active:scale-[0.98]"
            >
              Access the Master Post
              <span class="inline-block ml-2 transition-transform group-hover:translate-x-1">→</span>
            </a>
            <a
              href="/about"
              class="rounded-xl border-2 border-emerald-600 bg-emerald-950/50 px-8 py-4 text-base font-semibold text-emerald-100 shadow-sm hover:border-emerald-500 hover:bg-emerald-900/30 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]"
            >
              About Me
            </a>
          </div>
        </AnimateOnLoad>
        
        <!-- Trust Indicators -->
        <AnimateOnLoad delay={600} type="fade">
          <div class="mt-16 flex flex-wrap items-center justify-center gap-8 text-sm text-emerald-300">
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            <span>Deep dives</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            <span>Practical insights</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <span>Actionable content</span>
          </div>
        </div>
        </AnimateOnLoad>
      </div>
    </div>
  </section>

  <!-- Topics Section -->
  <section class="py-20 bg-emerald-50/70 dark:bg-emerald-950/30">
    <div class="mx-auto max-w-6xl px-4">
      <AnimateOnScroll type="slide-up">
        <div class="text-center mb-16">
          <p class="text-sm font-semibold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider mb-2">
            The Operating System
          </p>
          <h2 class="core-themes-title text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">
            The Core Stack
          </h2>
        </div>
      </AnimateOnScroll>
      
      <AnimateOnScroll
        stagger={150}
        type="slide-up"
        threshold={0.2}
        rootMargin="0px 0px -80px 0px"
        class="grid grid-cols-1 md:grid-cols-3 gap-8"
      >
        <!-- Learning -->
        <div class="group neumorphic rounded-2xl p-8 border border-emerald-100 dark:border-emerald-800/50 ring-1 ring-emerald-900/50 hover:border-emerald-300 dark:hover:border-emerald-600 transition-all transition-transform hover:shadow-2xl hover:shadow-emerald-500/25 hover:scale-[1.02] hover:rotate-0 translate-x-4 rotate-1">
          <div class="w-14 h-14 rounded-xl bg-emerald-100 dark:bg-emerald-900/40 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform group-hover:bg-gradient-to-r group-hover:from-emerald-400 group-hover:to-teal-500 transition-all duration-300">
            <svg class="h-7 w-7 text-emerald-600 dark:text-emerald-400 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Meta-Learning Systems</h3>
          <p class="theme-description text-gray-600 dark:text-gray-100 leading-relaxed">
            Systematic protocols for encoding new skills directly into long-term memory. Not study tips — engineered acquisition pipelines.
          </p>
        </div>

        <!-- Self-Improvement -->
        <div class="group neumorphic rounded-2xl p-8 border border-emerald-100 dark:border-emerald-800/50 ring-1 ring-emerald-900/50 hover:border-emerald-300 dark:hover:border-emerald-600 transition-all transition-transform hover:shadow-2xl hover:shadow-emerald-500/25 hover:scale-[1.02] hover:rotate-0">
          <div class="w-14 h-14 rounded-xl bg-emerald-100 dark:bg-emerald-900/40 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform group-hover:bg-gradient-to-r group-hover:from-emerald-400 group-hover:to-teal-500 transition-all duration-300">
            <svg class="h-7 w-7 text-emerald-600 dark:text-emerald-400 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Cognitive Architecture</h3>
          <p class="theme-description text-gray-600 dark:text-gray-100 leading-relaxed">
            Designing the mental operating system: attention management, decision frameworks, and environment engineering for peak processing.
          </p>
        </div>

        <!-- Polymathy -->
        <div class="group neumorphic rounded-2xl p-8 border border-emerald-100 dark:border-emerald-800/50 ring-1 ring-emerald-900/50 hover:border-emerald-300 dark:hover:border-emerald-600 transition-all transition-transform hover:shadow-2xl hover:shadow-emerald-500/25 hover:scale-[1.02] hover:rotate-0 -translate-x-4 -rotate-1">
          <div class="w-14 h-14 rounded-xl bg-emerald-100 dark:bg-emerald-900/40 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform group-hover:bg-gradient-to-r group-hover:from-emerald-400 group-hover:to-teal-500 transition-all duration-300">
            <svg class="h-7 w-7 text-emerald-600 dark:text-emerald-400 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Cross-Domain Synthesis</h3>
          <p class="theme-description text-gray-600 dark:text-gray-100 leading-relaxed">
            Treating knowledge domains as software modules. Connecting disparate fields to generate insights unavailable to specialists.
          </p>
        </div>
      </AnimateOnScroll>
    </div>
  </section>

  <!-- Architecture Section -->
  <section class="py-20 bg-gradient-to-b from-emerald-50 to-white dark:from-emerald-950/50 dark:to-emerald-950/20">
    <div class="mx-auto max-w-6xl px-4">
      <AnimateOnScroll type="slide-up">
        <div class="text-center mb-16">
          <p class="text-sm font-semibold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider mb-2">
            Methodology Stack
          </p>
          <h2 class="core-themes-title text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">
            The Architecture (Current Build)
          </h2>
        </div>
      </AnimateOnScroll>

      <AnimateOnScroll
        stagger={150}
        type="slide-up"
        threshold={0.2}
        rootMargin="0px 0px -80px 0px"
        class="grid grid-cols-1 md:grid-cols-3 gap-8"
      >
        <!-- Card 1 - The Kernel -->
        <div class="group neumorphic rounded-2xl p-8 border border-emerald-100 dark:border-emerald-800/50 ring-1 ring-emerald-900/50 hover:border-emerald-300 dark:hover:border-emerald-600 transition-all transition-transform hover:shadow-2xl hover:shadow-emerald-500/25 hover:scale-[1.02]">
          <div class="w-14 h-14 rounded-xl bg-emerald-100 dark:bg-emerald-900/40 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform group-hover:bg-gradient-to-r group-hover:from-emerald-400 group-hover:to-teal-500 transition-all duration-300">
            <svg class="h-7 w-7 text-emerald-600 dark:text-emerald-400 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3H5a2 2 0 00-2 2v4m6-6h10a2 2 0 012 2v4M9 3v10m0 0h10M9 13H5a2 2 0 00-2 2v4a2 2 0 002 2h4a2 2 0 002-2v-4a2 2 0 00-2-2zm10 0h-4a2 2 0 00-2 2v4a2 2 0 002 2h4a2 2 0 002-2v-4a2 2 0 00-2-2z" />
            </svg>
          </div>
          <p class="text-xs font-semibold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider mb-1">The Kernel</p>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Hardware Optimization</h3>
          <p class="theme-description text-gray-600 dark:text-gray-100 leading-relaxed">
            Upgrading raw cognitive processing power through extreme environmental control, optimized fuel, and neuro-plasticity protocols.
          </p>
        </div>

        <!-- Card 2 - The Logic -->
        <div class="group neumorphic rounded-2xl p-8 border border-emerald-100 dark:border-emerald-800/50 ring-1 ring-emerald-900/50 hover:border-emerald-300 dark:hover:border-emerald-600 transition-all transition-transform hover:shadow-2xl hover:shadow-emerald-500/25 hover:scale-[1.02]">
          <div class="w-14 h-14 rounded-xl bg-emerald-100 dark:bg-emerald-900/40 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform group-hover:bg-gradient-to-r group-hover:from-emerald-400 group-hover:to-teal-500 transition-all duration-300">
            <svg class="h-7 w-7 text-emerald-600 dark:text-emerald-400 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <p class="text-xs font-semibold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider mb-1">The Logic</p>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Meta-Learning</h3>
          <p class="theme-description text-gray-600 dark:text-gray-100 leading-relaxed">
            Coding new skills directly into memory. Using systemized mental models to master complex subjects in a fraction of the time.
          </p>
        </div>

        <!-- Card 3 - The Application -->
        <div class="group neumorphic rounded-2xl p-8 border border-emerald-100 dark:border-emerald-800/50 ring-1 ring-emerald-900/50 hover:border-emerald-300 dark:hover:border-emerald-600 transition-all transition-transform hover:shadow-2xl hover:shadow-emerald-500/25 hover:scale-[1.02]">
          <div class="w-14 h-14 rounded-xl bg-emerald-100 dark:bg-emerald-900/40 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform group-hover:bg-gradient-to-r group-hover:from-emerald-400 group-hover:to-teal-500 transition-all duration-300">
            <svg class="h-7 w-7 text-emerald-600 dark:text-emerald-400 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <p class="text-xs font-semibold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider mb-1">The Application</p>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Intellectual Property</h3>
          <p class="theme-description text-gray-600 dark:text-gray-100 leading-relaxed">
            Converting high-level knowledge into scalable, wealth-generating assets.
          </p>
        </div>
      </AnimateOnScroll>
    </div>
  </section>

  <!-- The Laboratory Section -->
  <section class="py-20 bg-white dark:bg-emerald-950/20">
    <div class="mx-auto max-w-6xl px-4">
      <AnimateOnScroll type="slide-up">
        <div class="text-center">
          <p class="text-sm font-semibold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider mb-2">
            Building in Public
          </p>
          <h2 class="core-themes-title text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">
            The Laboratory: Building in Public
          </h2>
        </div>
      </AnimateOnScroll>

      <AnimateOnScroll type="fade" delay={100}>
        <p class="mt-4 mb-16 text-center text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          I am actively researching and building these systems. I share the raw data, failed experiments, and successful frameworks exclusively with the network.
        </p>
      </AnimateOnScroll>

      <div class="max-w-2xl mx-auto">
        <!-- Software Card -->
        <AnimateOnScroll delay={0} type="slide-up">
        <div class="relative group overflow-hidden h-full flex flex-col neumorphic rounded-2xl p-8 lg:p-10 border border-emerald-100 dark:border-emerald-800/30 ring-1 ring-emerald-900/50 hover:border-emerald-300 dark:hover:border-emerald-600 transition-all hover:shadow-2xl hover:shadow-emerald-500/25 hover:scale-[1.02]">
          <div class="absolute top-4 right-4">
            <span class="font-builder inline-flex items-center px-3 py-1 rounded-full font-medium bg-emerald-100 dark:bg-emerald-800/40 text-emerald-700 dark:text-emerald-300">
              Work in Progress
            </span>
          </div>
          <div class="w-16 h-16 rounded-2xl bg-emerald-100 dark:bg-emerald-800/40 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform group-hover:bg-gradient-to-r group-hover:from-emerald-400 group-hover:to-teal-500 transition-all duration-300">
            <svg class="h-8 w-8 text-emerald-600 dark:text-emerald-400 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">Self-Improvement Gamification Architecture</h3>
          <p class="text-gray-600 dark:text-gray-100 mb-6 leading-relaxed">
            A systematic framework for converting personal development into a measurable, gamified system. Built in public — raw data, failed experiments, and successful frameworks shared exclusively with the network.
          </p>
          <ul class="mt-auto space-y-3">
            <li class="flex items-center text-sm font-bold text-gray-700 dark:text-gray-100">
              <svg class="mr-3 h-5 w-5 text-emerald-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="compendium-title font-playfair">Self-improvement gamification app</span>
            </li>
            <li class="flex items-center text-sm font-bold text-gray-700 dark:text-gray-100">
              <svg class="mr-3 h-5 w-5 text-emerald-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="compendium-title font-playfair">Custom life talents tree</span>
            </li>
          </ul>
        </div>
        </AnimateOnScroll>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-20 bg-emerald-800 dark:bg-emerald-950">
    <AnimateOnScroll type="fade">
      <div class="mx-auto max-w-4xl px-4 text-center">
        <h2 class="text-3xl font-bold text-white sm:text-4xl mb-6">
          Access the Architecture. Join the Network.
        </h2>
        <p class="text-lg text-emerald-100 mb-10 max-w-2xl mx-auto">
          The network gets exclusive access to raw research data, failed experiments, and successful frameworks. No generic content — just the architecture.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href={substackUrl}
            class="font-jetbrains-mono w-full sm:w-auto rounded-xl bg-white px-8 py-4 text-base font-semibold text-emerald-800 shadow-lg hover:bg-emerald-50 transition-all duration-200 hover:shadow-xl hover:scale-[1.02] active:scale-[0.98]"
          >
            Access the Master Post
          </a>
          <a
            href="/about"
            class="font-jetbrains-mono w-full sm:w-auto rounded-xl border-2 border-emerald-400 px-8 py-4 text-base font-semibold text-white hover:border-emerald-300 hover:bg-emerald-700/50 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]"
          >
            Learn More About Me
          </a>
        </div>
      </div>
    </AnimateOnScroll>
  </section>

  <script>
    import { initAnimations, destroyAnimations } from '@scripts/animations';
    initAnimations();

    const LISTENER_KEY = '__astroAnimationsListenerRegistered';
    if (!window[LISTENER_KEY]) {
      window[LISTENER_KEY] = true;
      document.addEventListener('astro:after-swap', () => {
        destroyAnimations();
        initAnimations();
      });
    }
  </script>
</BaseLayout>

<style>
  .bg-grid-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23059669' fill-opacity='0.2'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
</style>
