---
import BaseLayout from '@layouts/BaseLayout.astro';
import AnimateOnLoad from '@components/AnimateOnLoad.astro';
import AnimateOnScroll from '@components/AnimateOnScroll.astro';

const substackUrl =
  import.meta.env.PUBLIC_SUBSTACK_URL?.trim() ||
  'https://substack.com/@jakubbarak';
---

<BaseLayout 
  title="Jakub Barák | Polymathy" 
  description="Explore ideas at the intersection of learning, self-improvement, and polymathy. Join me on a journey to build knowledge across domains and create meaningful impact."
  showNewsletter={true}
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-emerald-900 via-emerald-800 to-teal-900">
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
    <div class="relative mx-auto max-w-6xl px-4 py-20 sm:py-28 lg:py-32 before:content-[''] before:absolute before:inset-0 before:bg-gradient-to-r before:from-emerald-500/20 before:to-teal-500/20 before:blur-3xl before:animate-pulse before:pointer-events-none">
      <div class="flex flex-col items-center text-center">
        <!-- Badge -->
        <AnimateOnLoad delay={0} type="slide-up">
          <div class="font-builder mb-6 inline-flex items-center rounded-full border border-emerald-700 bg-emerald-950/50 backdrop-blur px-4 py-1.5 text-emerald-300 shadow-md">
            <span class="mr-2 h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
            Building in public
          </div>
        </AnimateOnLoad>
        
        <!-- Main Headline (immediate visibility) -->
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl text-balance bg-gradient-to-r from-emerald-300 via-emerald-100 to-teal-400 bg-clip-text text-transparent hero-glow">
          Level Up Your Life
        </h1>
        
        <!-- Subheadline -->
        <AnimateOnLoad delay={400} type="slide-up">
          <p class="mt-6 max-w-2xl text-lg text-emerald-100/90 sm:text-xl leading-relaxed">
            Stop drifting and start building. I dissect the systems behind <strong>metalearning</strong>, <strong>coding</strong> and <strong>psychology</strong> to help you map your own path to mastery—no matter what you're chasing.
          </p>
        </AnimateOnLoad>
        
        <!-- CTA Buttons -->
        <AnimateOnLoad delay={500} type="slide-up">
          <div class="mt-10 flex flex-col sm:flex-row items-center gap-4">
            <a
              href={substackUrl}
              class="btn-read-substack group rounded-xl bg-emerald-600 dark:bg-emerald-500 px-8 py-4 text-base font-semibold text-white shadow-lg hover:bg-emerald-700 dark:hover:bg-emerald-400 transition-all duration-200 hover:shadow-2xl hover:-translate-y-0.5 hover:scale-[1.02] active:scale-[0.98]"
            >
              Read on Substack
              <span class="inline-block ml-2 transition-transform group-hover:translate-x-1">→</span>
            </a>
            <a
              href="/about"
              class="rounded-xl border-2 border-emerald-600 bg-emerald-950/50 px-8 py-4 text-base font-semibold text-emerald-100 shadow-sm hover:border-emerald-500 hover:bg-emerald-900/30 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]"
