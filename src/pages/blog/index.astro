---
import BaseLayout from '@layouts/BaseLayout.astro';
import BlogCard from '@components/BlogCard.astro';
import { getPaginatedPosts, getAllCategories } from '@lib/sanityQueries';
import type { Category } from '@types/sanity';

// Get query parameters from URL
const url = new URL(Astro.request.url);
const currentPage = Math.max(1, parseInt(url.searchParams.get('page') || '1', 10));
const currentCategory = url.searchParams.get('category') || '';
const currentSearch = url.searchParams.get('search') || '';

const PAGE_SIZE = 10;

// Fetch posts and categories in parallel
let paginatedPosts;
let categories: Category[] = [];

try {
  [paginatedPosts, categories] = await Promise.all([
    getPaginatedPosts({
      page: currentPage,
      pageSize: PAGE_SIZE,
      category: currentCategory,
      search: currentSearch,
    }),
    getAllCategories(),
  ]);
} catch (error) {
  console.error('Failed to fetch blog data:', error);
  paginatedPosts = {
    items: [],
    total: 0,
    page: 1,
    pageSize: PAGE_SIZE,
    totalPages: 0,
    hasNextPage: false,
    hasPrevPage: false,
  };
}

// Build URL with preserved parameters
function buildUrl(params: Record<string, string | number | undefined>) {
  const searchParams = new URLSearchParams();
  
  Object.entries(params).forEach(([key, value]) => {
    if (value !== undefined && value !== '' && value !== 1) {
      searchParams.set(key, String(value));
    }
  });
  
  const queryString = searchParams.toString();
  return `/blog${queryString ? `?${queryString}` : ''}`;
}

// Generate page numbers for pagination
function getPageNumbers(current: number, total: number): (number | string)[] {
  if (total <= 7) {
    return Array.from({ length: total }, (_, i) => i + 1);
  }
  
  const pages: (number | string)[] = [];
  
  if (current <= 3) {
    pages.push(1, 2, 3, 4, '...', total);
  } else if (current >= total - 2) {
    pages.push(1, '...', total - 3, total - 2, total - 1, total);
  } else {
    pages.push(1, '...', current - 1, current, current + 1, '...', total);
  }
  
  return pages;
}

const pageNumbers = getPageNumbers(currentPage, paginatedPosts.totalPages);

// Get active category name
const activeCategory = categories.find(c => c.slug.current === currentCategory);
---

<BaseLayout 
  title={`Blog${activeCategory ? ` - ${activeCategory.title}` : ''}${currentPage > 1 ? ` - Page ${currentPage}` : ''}`}
  description="Explore articles on learning, self-improvement, and polymathy. Deep dives into meta-learning, productivity systems, and building expertise across multiple domains."
>
  <div class="py-12 md:py-20 bg-gradient-to-b from-gray-50 to-white dark:from-gray-800 dark:to-gray-900">
    <div class="mx-auto max-w-6xl px-4">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white sm:text-5xl mb-4">
          Blog
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Exploring the intersections of learning, self-improvement, and polymathy. 
          Ideas and insights for curious minds.
        </p>
      </div>

      <!-- Search and Filters -->
      <div class="mb-10 space-y-4">
        <!-- Search Bar -->
        <form 
          method="GET" 
          action="/blog"
          class="flex gap-3"
          id="search-form"
        >
          {/* Preserve category when searching */}
          {currentCategory && (
            <input type="hidden" name="category" value={currentCategory} />
          )}
          
          <div class="relative flex-1">
            <input
              type="search"
              name="search"
              placeholder="Search articles..."
              value={currentSearch}
              class="w-full px-4 py-3 pl-12 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-gray-400 dark:focus:ring-gray-500 focus:border-transparent transition-shadow"
            />
            <svg 
              class="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-gray-400 dark:text-gray-500" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          
          <button
            type="submit"
            class="px-6 py-3 bg-gray-900 dark:bg-white text-white dark:text-gray-900 font-medium rounded-xl hover:bg-gray-700 dark:hover:bg-gray-200 transition-colors"
          >
            Search
          </button>
        </form>

        <!-- Category Filters -->
        <div class="flex flex-wrap items-center gap-2">
          <span class="text-sm text-gray-500 dark:text-gray-400 mr-2">Filter by:</span>
          
          <a
            href={buildUrl({ search: currentSearch })}
            class:list={[
              'px-4 py-2 text-sm font-medium rounded-full transition-colors',
              !currentCategory 
                ? 'bg-gray-900 dark:bg-white text-white dark:text-gray-900' 
                : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700'
            ]}
          >
            All
          </a>
          
          {categories.map((category) => (
            <a
              href={buildUrl({ category: category.slug.current, search: currentSearch })}
              class:list={[
                'px-4 py-2 text-sm font-medium rounded-full transition-colors',
                currentCategory === category.slug.current
                  ? 'bg-gray-900 dark:bg-white text-white dark:text-gray-900'
                  : 'bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700'
              ]}
            >
              {category.title}
            </a>
          ))}
        </div>

        <!-- Active Filters Display -->
        {(currentSearch || currentCategory) && (
          <div class="flex items-center gap-2 pt-2">
            <span class="text-sm text-gray-500 dark:text-gray-400">Active filters:</span>
            
            {currentSearch && (
              <span class="inline-flex items-center gap-1 px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-sm rounded-full">
                Search: "{currentSearch}"
                <a 
                  href={buildUrl({ category: currentCategory, page: 1 })}
                  class="ml-1 hover:text-blue-900 dark:hover:text-blue-100"
                  aria-label="Clear search"
                >
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </a>
              </span>
            )}
            
            {activeCategory && (
              <span class="inline-flex items-center gap-1 px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-sm rounded-full">
                Category: {activeCategory.title}
                <a 
                  href={buildUrl({ search: currentSearch, page: 1 })}
                  class="ml-1 hover:text-green-900 dark:hover:text-green-100"
                  aria-label="Clear category filter"
                >
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </a>
              </span>
            )}
            
            <a 
              href="/blog"
              class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 underline ml-2"
            >
              Clear all
            </a>
          </div>
        )}
      </div>

      <!-- Results Count -->
      {paginatedPosts.total > 0 && (
        <div class="mb-6 text-sm text-gray-500 dark:text-gray-400">
          Showing {((currentPage - 1) * PAGE_SIZE) + 1}-{Math.min(currentPage * PAGE_SIZE, paginatedPosts.total)} of {paginatedPosts.total} articles
        </div>
      )}

      <!-- Posts Grid -->
      {paginatedPosts.items.length > 0 ? (
        <div class="space-y-8">
          {/* Featured first post on first page */}
          {currentPage === 1 && paginatedPosts.items.length > 0 && (
            <BlogCard post={paginatedPosts.items[0]} featured={true} />
          )}
          
          {/* Regular posts grid */}
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {paginatedPosts.items.slice(currentPage === 1 ? 1 : 0).map((post) => (
              <BlogCard post={post} />
            ))}
          </div>
        </div>
      ) : (
        <!-- Empty State -->
        <div class="text-center py-16 bg-gray-50 dark:bg-gray-800 rounded-2xl border border-gray-100 dark:border-gray-700">
          <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
            {currentSearch || currentCategory ? 'No articles found' : 'No posts yet'}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            {currentSearch || currentCategory 
              ? 'Try adjusting your search or filters.'
              : 'Check back soon for new content!'}
          </p>
          {(currentSearch || currentCategory) && (
            <a 
              href="/blog"
              class="inline-flex items-center px-4 py-2 bg-gray-900 dark:bg-white text-white dark:text-gray-900 font-medium rounded-lg hover:bg-gray-700 dark:hover:bg-gray-200 transition-colors"
            >
              Clear filters
            </a>
          )}
        </div>
      )}

      <!-- Pagination -->
      {paginatedPosts.totalPages > 1 && (
        <nav class="mt-12 flex items-center justify-center" aria-label="Pagination">
          <div class="flex items-center gap-1">
            {/* Previous Button */}
            {paginatedPosts.hasPrevPage ? (
              <a
                href={buildUrl({ page: currentPage - 1, category: currentCategory, search: currentSearch })}
                class="p-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
                aria-label="Previous page"
              >
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
              </a>
            ) : (
              <span class="p-2 rounded-lg text-gray-300 dark:text-gray-600 cursor-not-allowed">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
              </span>
            )}

            {/* Page Numbers */}
            <div class="hidden sm:flex items-center gap-1 mx-2">
              {pageNumbers.map((pageNum) => (
                pageNum === '...' ? (
                  <span class="px-3 py-2 text-gray-400 dark:text-gray-500">...</span>
                ) : (
                  <a
                    href={buildUrl({ page: pageNum as number, category: currentCategory, search: currentSearch })}
                    class:list={[
                      'px-4 py-2 rounded-lg text-sm font-medium transition-colors',
                      pageNum === currentPage
                        ? 'bg-gray-900 dark:bg-white text-white dark:text-gray-900'
                        : 'text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800'
                    ]}
                    aria-current={pageNum === currentPage ? 'page' : undefined}
                  >
                    {pageNum}
                  </a>
                )
              ))}
            </div>

            {/* Mobile Page Indicator */}
            <span class="sm:hidden px-4 py-2 text-sm text-gray-600 dark:text-gray-400">
              Page {currentPage} of {paginatedPosts.totalPages}
            </span>

            {/* Next Button */}
            {paginatedPosts.hasNextPage ? (
              <a
                href={buildUrl({ page: currentPage + 1, category: currentCategory, search: currentSearch })}
                class="p-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
                aria-label="Next page"
              >
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            ) : (
              <span class="p-2 rounded-lg text-gray-300 dark:text-gray-600 cursor-not-allowed">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            )}
          </div>
        </nav>
      )}
    </div>
  </div>
</BaseLayout>
