---
interface Props {
  showNewsletter?: boolean;
}

const { showNewsletter = false } = Astro.props;
const currentYear = new Date().getFullYear();

const substackUrl =
  import.meta.env.PUBLIC_SUBSTACK_URL?.trim() ||
  'https://substack.com/@jakubbarak';

const socialLinks = [
  {
    name: 'GitHub',
    href: 'https://github.com/jakubbarak2001',
    icon: 'github',
  },
  {
    name: 'Substack',
    href: substackUrl,
    icon: 'substack',
  },
];

const quickLinks = [
  { href: '/about', label: 'About' },
];
---

<footer class="border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
  <div class="mx-auto max-w-6xl px-4 py-12">
    {/* Main Footer Content */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      {/* Brand & Tagline */}
      <div class="md:col-span-1">
        <a href="/" class="text-lg font-bold text-gray-900 dark:text-white hover:text-gray-700 dark:hover:text-gray-300 transition-colors">
          Jakub Barák
        </a>
        <p class="mt-3 text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
          Exploring the intersections of learning, self-improvement, and polymathy. 
          Building knowledge across domains to create meaningful impact.
        </p>
      </div>

      {/* Quick Links */}
      <div>
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
          Quick Links
        </h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Newsletter Signup (Optional) */}
      {showNewsletter && (
        <div>
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
            Stay Updated
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            Subscribe for insights on learning and personal growth.
          </p>
          <form class="flex gap-2" action="#" method="POST">
            <input
              type="email"
              name="email"
              placeholder="Enter your email"
              required
              class="flex-1 px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 dark:focus:ring-gray-500"
            />
            <button
              type="submit"
              class="px-4 py-2 text-sm font-medium text-white bg-gray-900 dark:bg-white dark:text-gray-900 rounded-lg hover:bg-gray-700 dark:hover:bg-gray-200 transition-colors"
            >
              Subscribe
            </button>
          </form>
        </div>
      )}

      {/* Social Links (shown when newsletter is hidden) */}
      {!showNewsletter && (
        <div>
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
            Connect
          </h3>
          <div class="flex items-center gap-4">
            {socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors"
                aria-label={link.name}
              >
                {link.icon === 'github' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                  </svg>
                )}
                {link.icon === 'substack' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z" />
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
    </div>

    {/* Bottom Bar */}
    <div class="pt-8 border-t border-gray-200 dark:border-gray-700">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-sm text-gray-600 dark:text-gray-400">
          &copy; {currentYear} Jakub Barák. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
            >
              {link.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
