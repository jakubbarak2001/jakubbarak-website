---
import Navigation from './Navigation.astro';
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  siteName?: string;
}

const { siteName = 'Jakub Barak' } = Astro.props;
---

<header id="header" class="sticky top-0 z-50 w-full border-b border-gray-200 dark:border-gray-700 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm">
  <div class="relative mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
    {/* Logo / Site Name */}
    <a 
      href="/" 
      class="text-xl font-bold text-gray-900 dark:text-white hover:text-gray-700 dark:hover:text-gray-300 transition-colors"
    >
      {siteName}
    </a>

    {/* Right side: Navigation + Theme Toggle */}
    <div class="flex items-center gap-4">
      <Navigation />
      <ThemeToggle />
    </div>
  </div>
</header>
